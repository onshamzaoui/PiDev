{{ form_start(form,{'attr':{'novalidate':'novalidate'}})}}

<div class="form-grid">
	<div class="form-group">
		{{ form_label(form.nomproduit,"Nom_produit") }}
		{{ form_widget(form.nomproduit) }}
		<div class="error-message">
			{{ form_errors(form.nomproduit) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.quantiteproduit,"Quantit√©_produit") }}
		{{ form_widget(form.quantiteproduit) }}
		<div class="error-message">
			{{ form_errors(form.quantiteproduit) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.prixproduit,"Prix_produit") }}
		<div class="input-group">
			<div class="input-group-prepend">
				<span class="input-group-text">$</span>
			</div>
			{{ form_widget(form.prixproduit) }}
		</div>
		<div class="error-message">
			{{ form_errors(form.prixproduit) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.prixremise,"Prix_remise") }}
		<div class="input-group">
			<div class="input-group-prepend">
				<span class="input-group-text">$</span>
			</div>
			{{ form_widget(form.prixremise) }}
		</div>
		<div class="error-message">
			{{ form_errors(form.prixremise) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.image,"Image") }}
		{{ form_widget(form.image) }}
		<div class="error-message">
			{{ form_errors(form.image) }}
		</div>
	</div>
</div>
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/formstyle.css') }}">

{% endblock %}

<button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
