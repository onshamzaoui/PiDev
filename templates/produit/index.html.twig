{% extends 'base.html.twig' %}


{% block about %}{% endblock %}
{% block service %}{% endblock %}

{% block JoinUs %}{% endblock %}
{% block testimonial %}{% endblock %}
{% block event %}{% endblock %}
{% block product %}
	<div class="table-responsive animated fadeIn">
		<h1 class="text-center mb-4">Produit index</h1>
		<table class="table table-striped table-hover">
			<thead class="thead-dark">
				<tr>
					<th class="align-middle">Id</th>
					<th class="align-middle">Nomproduit</th>
					<th class="align-middle">Prixproduit</th>
					<th class="align-middle">Prixremise</th>
					<th class="align-middle">Quantiteproduit</th>
					<th class="align-middle">Image</th>
					<th class="align-middle">nomcategorie</th>
					<th class="align-middle">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<td class="align-middle">{{ produit.id }}</td>
						<td class="align-middle">{{ produit.nomproduit }}</td>
						<td class="align-middle">{{ produit.prixproduit }}</td>
						<td class="align-middle">{{ produit.prixremise }}</td>
						<td class="align-middle">{{ produit.quantiteproduit }}</td>
						<td class="align-middle">{{ produit.image }}</td>
						<td class="align-middle">{{ produit.nomcategorie }}</td>
						<td class="align-middle">
							<a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-outline-info">Show</a>
							<a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-outline-success">Edit</a>
							<a href="{{ path('panier_produit_add', {'id': produit.id})}}" class="btn btn-success">

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7" class="align-middle">No records found.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="text-center mt-4">
			<a href="{{ path('app_produit_new') }}" class="btn btn-lg btn-outline-primary animated pulse infinite">Create new</a>
		</div>
	</div>


{% endblock %}
