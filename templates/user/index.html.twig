{% extends 'backComp.html.twig' %}

{% block title %}User index{% endblock %}

{% block main %}
      <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Speciality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.emailUser }}</td>
                <td>{{ user.nomUser }}</td>
                {# <td>{{ user.SpecialityName }}</td> #}
                {# <td>{{ user.roleUser ? user.roleUser|json_encode : '' }}</td> #}
                <td>{{ user.adresseUser }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
