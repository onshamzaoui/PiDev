{% block title %}Liste des dons{% endblock %}

{% block main %}
    <h1 class="mb-5">Liste des dons</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Quantité</th>
                    <th>Description</th>
                    <th>Type de déchet</th>
                    <th>Date de don</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for don in dons %}
                    <tr>
                        <td>{{ don.id }}</td>
                        <td>{{ don.quantitedon }}</td>
                        <td>{{ don.description }}</td>
                        <td>{{ don.typedechet }}</td>
                        <td>{{ don.datedon ? don.datedon|date('Y-m-d') : '' }}</td>
                        <td>
                            <a href="{{ path('app_don_show', {'id': don.id}) }}" class="btn btn-primary"><i class="bi bi-eye-fill"></i> Voir</a>
                            <a href="{{ path('app_don_edit', {'id': don.id}) }}" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun enregistrement trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_don_new') }}" class="btn btn-success"><i class="bi bi-plus-circle"></i> Ajouter un don</a>
{% endblock %}
