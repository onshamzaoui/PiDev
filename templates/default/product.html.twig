{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}


{% block about %}{% endblock %}
{% block service %}{% endblock %}
{% block categorie %}

	<div class="nav-item dropdown">
		<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Categories</a>
		<div class="dropdown-menu m-0 py-0" style="border-radius: 0;">
			{% for categorie in categories %}
				<a href="{{ path('product', {'Tools': 'Tools'}) }}" class="dropdown-item px-3">{{ categorie.nomcategorie }}</a>
			{% endfor %}
		</div>
	</div>

{% endblock %}
{% block product %}
	<div class="container-xxl py-5">
		<div class="container">
			<div class="row g-0 gx-5 align-items-end">
				<div class="col-lg-6">
					<div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
						<h1 class="display-5 mb-3">Our Products</h1>
						<p>We offer you the highest quality products that will match your needs.</p>
					</div>
				</div>

			</div>
			<div class="tab-content">
				<div id="tab-1" class="tab-pane fade show p-0 active">
					<div class="row g-4">
						{% for produit in produits %}
							<div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
								<div class="product-item">
									<div class="position-relative bg-light overflow-hidden">
										<img class="w-100" src="{{ asset ( produit.image)}}" alt="">
										<div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">New</div>
									</div>
									<div class="text-center p-4">
										<a class="d-block h5 mb-2" href="">{{produit.nomproduit}}</a>
										<span class="text-primary me-1">${{produit.prixproduit}}</span>
										<span class="text-body text-decoration-line-through">${{produit.prixremise}}</span>
									</div>
									<div class="d-flex border-top">
										<small class="w-50 text-center border-end py-2">
											<a class="text-body" href="">
												<i class="fa fa-eye text-primary me-2"></i>View detail</a>
										</small>
										<small class="w-50 text-center py-2">
											<a class="text-body" href="{{ path('panier_produit_add', {'id': produit.id})}}">
												<i class="fa fa-shopping-bag text-primary me-2"></i>Add to cart</a>
										</small>
									</div>
								</div>
							</div>

						{% endfor %}

						<div class="col-12 text-center wow fadeInUp" data-wow-delay="0.1s">
							<a class="btn btn-primary rounded-pill py-3 px-5" href="">Browse More Products</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}{% block JoinUs %}{% endblock %}{% block testimonial %}{% endblock %}{% block event %}{% endblock %}
